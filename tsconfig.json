{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@agent-brain/shared": ["./packages/shared/src"],
      "@agent-brain/shared/*": ["./packages/shared/src/*"],
      "@agent-brain/core": ["./packages/core/src"],
      "@agent-brain/core/*": ["./packages/core/src/*"],
      "@agent-brain/timeline": ["./packages/timeline/src"],
      "@agent-brain/timeline/*": ["./packages/timeline/src/*"],
      "@agent-brain/testing": ["./packages/testing/src"],
      "@agent-brain/testing/*": ["./packages/testing/src/*"],
      "@agent-brain/vscode": ["./packages/vscode/src"],
      "@agent-brain/vscode/*": ["./packages/vscode/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
